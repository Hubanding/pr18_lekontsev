<Window x:Class="Airlines_lekontsev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines_lekontsev"
        mc:Ignorable="d"
        Title="Управление авиалиниями" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="#FF0C73FE">
            <Image Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,5,5" Source="Image/image.png"/>
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Управление авиалиниями" Foreground="White" FontSize="16" FontWeight="Bold" Margin="59,16,0,0"/>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Content="Выйти" Margin="0,16,9.6,0" Background="White" Click="Exit"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,60,-0.4,0"/>
    </Grid>
</Window>

